    let categoryFilterName = "<%=categoryFilterName%>"

async function price(priceRange){
   try {
    const data=await fetch("/productPriceRange",{
        method:"POST",
        headers:{
            "Content-Type":"application/json"
        },
        body:JSON.stringify({priceRange})
    })
    const value=await data.json();
      if(value.success){
    
        window.location.href="/userProducts"
    }

   } catch (error) {
    console.error(`error while fetching the data from the price range \n ${error}`);
   }
}

async function sortBasedFilter(){
    try {
        console.log(sortby.value)
        const sortValue = sortby.value
        const data=await fetch("/productSort",{
        method:"POST",
        headers:{
            "Content-Type":"application/json"
        },
        body:JSON.stringify({sortValue})
    })
    const value=await data.json();
      if(value.success){
         window.location.href="/userProducts"
        }
        
    } catch (error) {
        console.error(`error while fetching the data from sort based filter \n ${error}`);
    }
}


async function searchFilter(){

   const value = document.getElementById("searchFilter").value

   if(value){

           const search = await fetch("/search",{
     
             method:"POST",
             headers:{
                 "Content-Type":"application/json"
             },
             body:JSON.stringify({value})
           })

           const res = await search.json()

           if(res.success){

            window.location.reload()
           }

       }

}

    
</script>


