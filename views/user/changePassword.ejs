<script>

    $("#newPasswordValidation").validate({
        rules:{
            newPassword:{
                required:true,
                minlength:6
            },
            confirmPassword:{
                required:true,
                minlength:6,
                equalTo:"#newPassword"
            }
        }
    })


    let newPassword=document.getElementById("newPassword")

    const submitButton=document.getElementById("submit-button")
    
    submitButton.addEventListener("click",async(e)=>{
        try {
            e.preventDefault();

            const data=await fetch(`/updatePassword${newPassword.value}`,{
            method:"post",
            headers:{
                "Content-Type":"application/json"
            }          
            })

            const dataValue=await data.json()

            if(dataValue.success){
                window.location.href="/signup"
            }else{
                window.location.href="/changePassword"
            }
        } catch (error) {
            console.error(`error while fetching the new password \n ${error}`);
        }
       
    })


</script>




